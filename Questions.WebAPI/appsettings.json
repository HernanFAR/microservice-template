// Por efecto, en el .gitignore esta puesto que los archivos appsettings.*.json se ignoren, por razones de seguridad
// recuerda agregar la configuración apropiada acá cada vez que hagas un paso a producción

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=;Database=;User Id=;Password="
  },
  "Cors": [ "http://localhost:8080" ],
  "SwaggerAuthenticationConfiguration": {
    "Username": "",
    "Password": ""
  },
  "JwtConfiguration": {
    "IssuerSigningKey": "",
    "Issuer": "",
    "Audience": "",
    "Duration": 0
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}
